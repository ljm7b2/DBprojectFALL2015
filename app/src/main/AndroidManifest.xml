<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ljm7b.fitness_tracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainScreenActivity"
            android:label="@string/app_name" >

        </activity>
        <!-- All Product Activity -->
        <activity
            android:name=".AllWorkoutsActivity"
            android:label="All Workouts" >
        </activity>

        <!-- Add Product Activity -->
        <activity
            android:name=".NewWorkoutActivity"
            android:label="Add New Workout" >
        </activity>

        <activity android:name="RegistrationActivity"
            android:label="Register User">
        </activity>

        <activity android:name=".LoginRegisterActivity"
            android:label="Login or Register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
            android:label="Login User">
        </activity>


    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
