<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!-- icon -->
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_brain"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/main_cyan" />

    <!-- icon -->
    <ImageView
        android:id="@+id/item_icon2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_brain"
        android:layout_below="@+id/item_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/main_pink" />

    <!-- Name Label -->
    <TextView
        android:id="@+id/name_brain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="17dip"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/item_icon4"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_toLeftOf="@+id/item_icon3"
        android:layout_toStartOf="@+id/item_icon3"
        android:background="@color/highlighted_text_material_light"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/duration_brain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="17dip"
        android:textStyle="bold"
        android:layout_below="@+id/name_brain"
        android:gravity="center"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_toStartOf="@+id/item_icon3"
        android:layout_toLeftOf="@+id/item_icon3"
        android:background="@color/highlighted_text_material_light"
        android:textColor="@color/white" />
    <ImageView
        android:id="@+id/item_icon3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_body"
        android:layout_alignTop="@+id/item_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/main_pink" />
    <ImageView
        android:id="@+id/item_icon4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_body"
        android:layout_below="@+id/item_icon3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/main_cyan" />

</RelativeLayout>